<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1437B7"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:text="@string/title_home"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:backgroundTint="#001F93"
        app:menu="@menu/navigation" />

    <FrameLayout
        android:id="@+id/OnOff"
        android:layout_width="395dp"
        android:layout_height="624dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="43dp"
        android:visibility="visible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <ImageView
            android:id="@+id/ButOn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="-80dp"
            app:srcCompat="@drawable/ButOn" />

        <ImageView
            android:id="@+id/ButOff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="80dp"
            app:srcCompat="@drawable/ButOff" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/Parasol"
        android:layout_width="395dp"
        android:layout_height="624dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="43dp"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <Button
            android:id="@+id/ButGPS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#284BCC"
            android:text="Envoyer les coordonnÃ©es GPS"
            android:layout_gravity="center"/>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/Ombre"
        android:layout_width="395dp"
        android:layout_height="624dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="43dp"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <Button
            android:id="@+id/ButOmbre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#284BCC"
            android:text="envoyer les mesures"
            android:layout_gravity="center"/>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/Infos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/TextInfos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#284BCC"
            android:text="blablabla" />

    </FrameLayout>

</android.support.constraint.ConstraintLayout>